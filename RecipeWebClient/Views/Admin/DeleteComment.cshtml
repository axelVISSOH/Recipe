@model RecipeAPI.Models.Comment
@{
    ViewData["Title"] = "Delete User";
}
<div class="container">
    Confirmez la suppresion du commentaire @Model.Message du user @Model.UserID pour la recette @Model.RecipeID.
</div>

<form asp-action="DeleteCommentConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="ReportedComments">Back to List</a>
</form>